#!/usr/bin/env python3
from glowstick.hdhomerun import get_devices

if __name__ == "__main__":
    devices = get_devices()
    print(devices)

    if devices:
        print(devices[0].features)
        print(devices[0].copyright)
        print(devices[0].hwmodel)
        print("Tuners: {}".format(devices[0].tuner_count))
